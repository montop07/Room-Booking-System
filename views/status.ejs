            </li>
            <li class="nav-item">
                <a class="nav-link" href="login"><h3>Logout</h3></a>
            </li>
        </ul>
</nav>
<script>
    async function checkProposalStatus() {
        const checkstring = document.getElementById('checkstring').value;

        // Make a fetch request to your server to get the status
        const response = await fetch(`/getStatus`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ check: checkstring }),
        });

        const data = await response.json();

        // Display the status on the page
        document.getElementById('status').innerHTML = `<p>Status: ${data.status}</p>`;
    }
</script>
</body>

